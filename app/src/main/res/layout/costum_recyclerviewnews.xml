<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
    android:orientation="vertical">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/news_gambar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/news_judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/news_gambar"
        android:background="@color/cardview_shadow_start_color"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:textColor="@color/cardview_light_background"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/news_timestamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/news_judul"
        android:background="@color/cardview_shadow_start_color"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:textColor="@color/cardview_light_background" />

    <TextView
        android:id="@+id/news_isi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/news_gambar"
        android:paddingEnd="5dp"
        android:paddingStart="5dp" />

</RelativeLayout>
